<div class="editor__wrapper">
    <div class="side__bar--wrapper flex-row">
        <div class="element-selector">
            <ul class="nav flex flex-column">
                <li class="nav-item dropright top_menu">
                    <a class="nav-link add__more--resources text-center" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Add more resources"><i class="ti-plus"></i></a>
                    <div class="dropdown-menu">
                        <%= link_to add_path(add: :image), class:"dropdown-item", method: :post, remote: true do %>
                            <i class="ti-gallery"></i> 画像
                        <% end %>
                        <%= link_to add_path(add: :sticker), class:"dropdown-item", method: :post, remote: true do %>
                            <i class="ti-face-smile"></i> ステッカー
                        <% end %>
                        <%= link_to add_path(add: :text), class:"dropdown-item", method: :post, remote: true do %>
                            <i class="ti-text"></i> 文字
                        <% end %>
                        <%= link_to add_path(add: :music), class:"dropdown-item", method: :post, remote: true do %>
                            <i class="ti-music"></i> 音楽
                        <% end %>
                        <%= link_to load_resources_path(user_id: @current_user.id), class:"dropdown-item", method: :post, remote: true do %>
                            <i class="ti-upload"></i> アプロード
                        <% end %>
                    </div>
                </li>
                <li class="nav-item">
                    <%= link_to add_path(add: :layout), class:"nav-link component__select", title:"Change style", method: :post, remote: true do %>
                        <i class="ti-layout"></i>
                    <% end %>
                </li>
                <li class="nav-item">
                    <a class="nav-link component__select" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Change size"><i class="ti-layers-alt"></i></a>
                </li>
            </ul>
        </div>
        <div class="element-detail">
            <%= render partial: "resources/list_layout", locals:{layouts: @layouts} %>
        </div>
    </div>
    <div class="card--editor" data-card-id="<%= @card.id %>" data-card-format="<%= @card.format.to_json %>" data-lyt="<%= {width: @layout.width, height: @layout.height, ratio: @layout.ratio}.to_json %>">
        <div class="canvas">
            <canvas class="content--place" id="edit__content--place" width="<%= @layout.width*@layout.ratio %>" height="<%= @layout.height*@layout.ratio %>">
        </div>
    </div>
    <%= render partial:"music_edit", locals: { card: @card } %>
</div>
<%= render partial: "resources/upload_resource", locals:{resource: @resource, card: @card} %>
<%= render partial: "shares/share_link_dialog", locals:{ card: @card } %>
