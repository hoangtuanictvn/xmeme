<!DOCTYPE html>
<html>
  <head>
    <title>Xmeme</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= "#{parent_class}page" %>">
    <%= render partial: "shared/normal_navigation", locals:{editor: params[:action] == "edit" && self.controller_name == "cards"} %>
    <%= yield %>
  </body>
</html>
